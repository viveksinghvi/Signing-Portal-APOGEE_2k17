  {% block script %}
	<script>
	$(document).ready(function() {
	$('#n').hide(); //hide field on start
 	$('#b').hide(); //hide field on start
	$('#mealtype').change(function() {
 
	 var $index = $('#mealtype').index(this);
 
	 if($('#mealtype').val() == 'Non Veg') { //if this value is selected
	 $('#v').hide(); //this field is hidden
	 $('#n').show();
	 $('#b').hide(); //this field is hidden
	 } 
	 else if($('#mealtype').val() == 'Both'){
	 $('#v').hide();
 	 $('#b').show();//else it is shown
	 $('#n').hide();
	 }
	 else{
	 $('#n').hide();
 	 $('#v').show();//else it is shown
	 $('#b').hide();
	 }
        });
 });
</script>
	<script>
	$(document).ready(function() {
	$('#wear').hide(); //hide field on start
 	$('#event').hide(); //hide field on start
	$('#signingtype').change(function() {
 
	 var $index = $('#signingtype').index(this);
 
	 if($('#signingtype').val() == 'grub') { //if this value is selected
	 $('#wear').hide(); //this field is hidden
	 $('#grub').show();
	 $('#event').hide(); //this field is hidden
	 } 
	 else if($('#signingtype').val() == 'wear'){
	 $('#wear').show(); //this field is hidden
	 $('#grub').hide();
	 $('#event').hide(); //this field is hidden
	 }
	 else{
	 $('#wear').hide(); //this field is hidden
	 $('#grub').hide();
	 $('#event').show(); //this field is hidden
	 }
        });
 });
</script>
<script src="{% static 'dcalendar.picker.js' %}"></script>
<script>
$('#demo').dcalendarpicker({
format:'yyyy-mm-dd'
});

</script>
